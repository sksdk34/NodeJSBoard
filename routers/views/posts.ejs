<!DOCTYPE html>
<html>
  <head>
    <meta>
    <title></title>
    <script src="https://code.jquery.com/jquery-3.4.1.js" integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU=" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap-theme.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>

    <link rel="stylesheet" type="text/css" href="/css/base.css">

    <style>
      .form-inline{
        margin: 10px;
      }
    </style>
  </head>
  <body>
    <div class="header">
      <a href="/board/posts"><h1>MS Blog</h1></a>
    </div>

    <form class="form-inline" action="posts/search" method="post">
      <div class="form-group">
        <input type="text" class="form-control" id="exampleInputName2" placeholder="Search" name="search">
      </div>
      <button type="submit" class="btn btn-default">SEARCH</button>
      <button type="button" class="btn btn-default logout">LOGOUT</button>
    </form>

    <table class="table table-hover">
      <tr>
        <th>NO</th>
        <th>TITLE</th>
        <th>USER</th>
        <th>TIME</th>
      </tr>
    </table>

    <div class="create">
      <button type="button" class="btn btn-default write">WRITE</button>
    </div>
  </body>
</html>

<script>
  //게시글 리스트 뿌려주기
  var resultList = <%- result %>
  for(var i=0; i<resultList.length; i++){
      $('.table').append('<tr><th>'+ resultList[i].no +'<th><a href="posts/detail/' + resultList[i].no + '">' + resultList[i].title + '</a></th><th>' + resultList[i].writer + '</th><th>' + resultList[i].date + '</th></tr>');
  }

  //게시글 작성 페이지로 이동
  $('.write').click(function(){
    location.href = "posts/create";
  })

  //로그아웃(쿠키삭제)
  $('.logout').click(function(){
    location.href = "posts/logout";
  })
</script>
